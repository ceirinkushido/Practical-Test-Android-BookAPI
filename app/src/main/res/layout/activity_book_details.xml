<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ToggleButton Favorite Book  -->
        <CheckBox
            android:button="@android:drawable/btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cbx_book_Favorite"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:text="@string/favorite_this_book"/>


        <!-- TextView Book title -->
        <TextView
            android:id="@+id/txt_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <!-- TextView Book Published Date -->
        <TextView
            android:id="@+id/txt_book_publishedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <!-- TextView Book Author -->
        <TextView
            android:id="@+id/txt_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <!-- TextView Book description -->
        <TextView
            android:id="@+id/txt_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Button Buy Book-->
        <Button
            android:id="@+id/btn_buy_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buy_book"
            android:visibility="gone"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>